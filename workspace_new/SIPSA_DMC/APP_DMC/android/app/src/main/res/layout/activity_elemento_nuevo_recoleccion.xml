<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/blanco"
    tools:context=".RecoleccionNuevoArticuloActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_sipsa"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/atrasRecolectarArticuloNuevo"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:background="@color/color_sipsa"
                style="@style/titulo_negrita"
                app:srcCompat="@drawable/ic_arrow_back"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/blanco"
                android:fontFamily="sans-serif"
                style="@style/titulo_negrita"
                android:text="Nuevo Articulo - Recolectar" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/color_sipsa"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/titulo_negrita"
                    android:textSize="10dp"
                    android:textColor="@color/blanco"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/color_sipsa"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/titulo_negrita"
                    android:textSize="10dp"
                    android:textColor="@color/blanco"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/color_sipsa"
        android:showDividers="middle">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="left|center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/llNovedades"
                android:layout_gravity="left|center">


                <CheckBox
                    android:id="@+id/cbNdNuevo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_size_xs"
                    android:text="ND"
                    android:backgroundTint="@color/blanco"
                    android:textColor="@color/blanco"
                    style="@style/CustomCheckBox" />


                <CheckBox
                    android:id="@+id/cbPrNuevo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_size_xs"
                    android:text="PR"
                    android:backgroundTint="@color/blanco"
                    android:textColor="@color/blanco"
                    style="@style/CustomCheckBox" />

                <CheckBox
                    android:id="@+id/cbIsNuevo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_size_xs"
                    android:text="IS"
                    android:backgroundTint="@color/blanco"
                    android:textColor="@color/blanco"
                    style="@style/CustomCheckBox" />

                <CheckBox
                    android:id="@+id/cbINNuevo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_size_xs"
                    android:layout_weight="1"
                    android:text="IN"
                    android:backgroundTint="@color/blanco"
                    android:textColor="@color/blanco"
                    style="@style/CustomCheckBox" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:showDividers="middle"
                        android:weightSum="1">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10.75"
                            android:gravity="right"
                            android:orientation="vertical"
                            android:weightSum="1">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="108dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:maxLength="100"
                                    android:text="Articulo :"
                                    android:textIsSelectable="false"
                                    android:textColor="@color/dane"
                                    style="@style/titulo_negrita" />

                                <EditText
                                    android:id="@+id/etArticulo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text=""
                                    android:textColor="@color/dane"
                                    android:textIsSelectable="false" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="108dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:maxLength="100"
                                    android:text="ICA/Linea :"
                                    android:textIsSelectable="false"
                                    android:textColor="@color/dane"
                                    style="@style/titulo_negrita" />

                                <EditText
                                    android:id="@+id/etIca"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text=""
                                    android:textColor="@color/dane"
                                    android:textIsSelectable="false" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="108dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="5dp"
                                    android:autoText="false"
                                    android:text="Casa Comercial : "
                                    android:textIsSelectable="false"
                                    android:textColor="@color/dane"
                                    style="@style/titulo_negrita" />

                                <AutoCompleteTextView
                                    android:id="@+id/actvCasaComercial"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/dane"
                                    android:layout_weight="1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="108dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:autoText="false"
                                    android:text="Presentación :"
                                    android:textIsSelectable="false"
                                    android:textColor="@color/dane"
                                    style="@style/titulo_negrita" />


                                <Spinner
                                    android:id="@+id/spPresentacionNuevo"
                                    style="@style/Widget.AppCompat.Spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="0dp"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginEnd="0dp"
                                    android:layout_marginRight="0dp"
                                    android:background="@drawable/borde_spinner"
                                    android:dropDownWidth="wrap_content"
                                    android:dropDownVerticalOffset="30dp"
                                    android:hapticFeedbackEnabled="false"
                                    android:paddingLeft="4dp"
                                    android:popupBackground="@android:color/white"
                                    android:popupElevation="0dp"
                                    android:singleLine="true"
                                    android:spinnerMode="dialog"
                                    android:stateListAnimator="@drawable/spinner_sla"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="108dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:autoText="false"
                                    android:text="Unidad :"
                                    android:textIsSelectable="false"
                                    android:textColor="@color/dane"
                                    style="@style/titulo_negrita" />

                                <Spinner
                                    android:id="@+id/spUnidadNuevo"
                                    style="@style/Widget.AppCompat.Spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="0dp"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginEnd="0dp"
                                    android:layout_marginRight="0dp"
                                    android:background="@drawable/borde_spinner"
                                    android:dropDownWidth="wrap_content"
                                    android:dropDownVerticalOffset="30dp"
                                    android:hapticFeedbackEnabled="false"
                                    android:paddingLeft="4dp"
                                    android:popupBackground="@android:color/white"
                                    android:popupElevation="0dp"
                                    android:singleLine="true"
                                    android:spinnerMode="dialog"
                                    android:stateListAnimator="@drawable/spinner_sla"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:showDividers="middle">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="ACTUAL"
                                android:textColor="@color/dane"
                                style="@style/titulo_negrita"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_sm"/>


                            <LinearLayout
                                android:id="@+id/llPrecioRecoleccion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:autoText="false"
                                    android:text="Precio : "
                                    android:textIsSelectable="true"
                                    android:textColor="@color/dane"
                                    style="@style/titulo_negrita" />

                                <EditText
                                    android:id="@+id/etPrecioRecoleccionNuevo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="0.0"
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/dane"
                                    android:maxLength="12" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>





        </ScrollView>
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false">
        <LinearLayout
            android:id="@+id/botones"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/fabGuardarNuevoArticulo"
                    style="@style/btn_rojo"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        app:srcCompat="@drawable/ic_save"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blanco"
                        android:text="Guardar"
                        style="@style/titulo_negrita" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>