<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	tools:context="gov.dane.sipsa.gov.dane.sipsa.activity.MapaActivity"
	android:layout_height="fill_parent">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal">


		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:src="@drawable/satnot"
			android:id="@+id/gps" />

		<!--<TextView android:id="@+id/distancia"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="d:"
			android:maxWidth="100dp"/>-->



		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:src="@drawable/hand"
			android:id="@+id/iruc" />


		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:src="@drawable/ic_gps_fixed_black"
			android:id="@+id/irgps" />


		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:text="Continuar"
			android:src="@drawable/ic_send_black"
			android:id="@+id/continuar" />


	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal">

		<TextView android:id="@+id/coordenadas"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="lat: lng:"
			android:textSize="12dp"
			android:gravity="center_vertical"/>
	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal">

		<org.osmdroid.views.MapView android:id="@+id/map"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />


	</LinearLayout>





</LinearLayout>