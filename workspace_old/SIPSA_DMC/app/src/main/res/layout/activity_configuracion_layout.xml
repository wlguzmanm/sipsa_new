<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:padding="15dp"
            android:id="@+id/login_form">

            <ImageView
                android:layout_width="119dp"
                android:layout_height="64dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/logodane"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carga Mensual"
                android:id="@+id/btnObtenerMensual"
                android:background="@color/primary"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carga a DMC"
                android:id="@+id/btnObtenerRecoleccion"
                android:background="@color/primary"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Envio Diario a DB"
                android:id="@+id/btnSubirRecoleccion"
                android:background="@color/primary"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp" />
        </LinearLayout>


</LinearLayout>
